# ============================================
# JAZYL PLATFORM - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and configure the values

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/jazyl

# ============================================
# SECURITY - JWT & AUTHENTICATION
# ============================================
# CRITICAL: Generate a secure secret key with:
# python -c 'import secrets; print(secrets.token_urlsafe(32))'
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_TOKEN_BLACKLIST_PREFIX=blacklist:
REDIS_SESSION_PREFIX=session:

# ============================================
# GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# WHATSAPP INTEGRATION
# ============================================
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_VERIFICATION_CODE_EXPIRE_MINUTES=5
WHATSAPP_VERIFICATION_CODE_LENGTH=6

# ============================================
# SECURITY SETTINGS
# ============================================
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30
PASSWORD_MIN_LENGTH=8
REQUIRE_EMAIL_VERIFICATION=false

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_AUTH_PER_MINUTE=5

# ============================================
# CORS
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://*.jazyl.tech
CORS_ALLOW_CREDENTIALS=true

# ============================================
# FILE STORAGE
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# ============================================
# APPLICATION
# ============================================
API_V1_PREFIX=/api/v1
PROJECT_NAME=Jazyl Platform
ENVIRONMENT=development
DEBUG=true

# ============================================
# AUDIT LOGGING
# ============================================
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_SENSITIVE_OPERATIONS=true
